<application>

  <name>Study Air Hockey App</name>

  <dependencies>
      <port>/yarplogger</port>
      <port>/icubSim/cartesianController/left_arm/state:o</port>
      <port>/icubSim/cartesianController/right_arm/state:o</port>
      <port>/iKinGazeCtrl/rpc</port>
  </dependencies>

  <module>
      <name>study-air-hockey</name>
      <parameters>--torso-n 1</parameters>
      <environment>YARP_FORWARD_LOG_ENABLE=1;YARP_CLOCK=/clock</environment>
      <node>localhost</node>
  </module>

  <module>
      <name>yarpscope</name>
      <parameters>--remote /study-arm-hockey/log --index 0 --min 0.0 --max 0.2</parameters>
      <dependencies>
         <port timeout="20">/study-arm-hockey/log</port>
      </dependencies>
      <node>localhost</node>
  </module>

</application>
